<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stek3.childregistry.register_parents">


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/Father_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Father"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.stek3.childregistry.views.bio_card
                    android:id="@+id/biocard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.example.stek3.childregistry.views.bio_card>

            </LinearLayout>

            <com.example.stek3.childregistry.views.location_card
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.stek3.childregistry.views.location_card>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Mother_Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mother"
                    android:textAlignment="viewStart"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <com.example.stek3.childregistry.views.bio_card
                    android:id="@+id/biocard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.example.stek3.childregistry.views.bio_card>

                <com.example.stek3.childregistry.views.location_card
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.example.stek3.childregistry.views.location_card>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NEXT" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
